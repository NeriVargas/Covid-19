<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:paddingLeft="16dp"
android:paddingTop="16dp"
android:paddingRight="16dp"
android:paddingBottom="16dp"
tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/instrucciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FF9800"
        android:text="Selecciona tus caracteristicas"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="26dp"
        android:text="Genero"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/groupRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/RadiobutomSexoM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mujer"
            />

        <RadioButton
            android:id="@+id/RadiobutomSexoH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hombre" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edad:"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Situacion de peso actual:"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/groupRadioPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <RadioButton
            android:id="@+id/RbBajoP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bajo peso" />

        <RadioButton
            android:id="@+id/RbPesoN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso normal" />

        <RadioButton
            android:id="@+id/RbSobrepeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sobrepeso" />

        <RadioButton
            android:id="@+id/RbObesidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obesidad" />
    </RadioGroup>

    <TextView
        android:id="@+id/textPadecimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Padeciminetos"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <CheckBox
        android:id="@+id/checkPadecimiento1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hipertencion" />
    <CheckBox
        android:id="@+id/checkPadecimiento2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diabetes" />
    <CheckBox
        android:id="@+id/checkPadecimiento3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enfermedad pulmonar
                      Obstructiva Cronica(EPOC)" />
    <CheckBox
        android:id="@+id/checkPadecimiento4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enfermedad Renal Cronica" />
    <CheckBox
        android:id="@+id/checkPadecimiento5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inmunosupresion (por
                       ejemplo cancer, lupus, etc)"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="26dp"
        />

    <TextView
        android:id="@+id/textViewResul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text=""
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:textStyle="italic" />
</LinearLayout>


</ScrollView>